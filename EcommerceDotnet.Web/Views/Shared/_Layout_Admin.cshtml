                $('#myModal123').fadeOut();
            });

            // Optional: Close modal when clicking outside of it
            $(window).click(function (event) {
                if ($(event.target).is('#myModal123')) {
                    $('#myModal123').fadeOut();
                }
            });

            // Confirm button action
