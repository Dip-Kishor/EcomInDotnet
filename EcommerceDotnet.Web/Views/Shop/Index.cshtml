 @model ItemsViewModel

<style>


    .my-custom-btn {
        font-weight: 600;
        /* padding: 12px 30px; */
        border-radius: 10px;
        color: #ffffff;
        background: #3b5d50;
        border-color: #3b5d50;
    }
</style>

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>

<!-- Category Filter Section -->
<div class="container my-4 d-flex justify-content-between">
    <form method="get" asp-action="Index">
        <div class="row align-items-center">
            <div class="col-auto">

                <select id="category" name="categoryId" class="form-select form-select-sm w-100">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        @if (category.CId == Model.SelectedCategoryId)
                        {
                            <option value="@category.CId" selected>@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.CId">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="my-custom-btn  mt-2 btn-sm ">Filter</button>
            </div>
        </div>
    </form>
    <form method="get" asp-action="Index">
        <div class="row align-items-center">
            <div class="col-auto">
                <label class="sr-only" for="searchString">Search</label>
                <input type="text" id="searchString" name="searchString" class="form-control form-control-sm mb-2" placeholder="Search for items" value="@Model.SearchString" style="height: 30px; font-size: 0.875rem;" />
            </div>
            <div class="col-auto d-flex align-items-center">
                <button type="submit" class="my-custom-btn mb-2"><i class="fa-solid fa-search"></i></button>
            </div>
            <div class="col-auto d-flex align-items-center">
                <button type="button" id="clearSearch" class="my-custom-btn  mb-2"><i class="fa-solid fa-eraser"></i></button>
            </div>
        </div>
    </form>



</div>


<!-- End Hero Section -->
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <!-- Start Column 1 -->
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" href="#">
                        <img src="@item.ImageURL" class="img-fluid product-thumbnail">
                        <h3 class="product-title">@item.Name</h3>
                        <strong class="product-price">@item.Price.ToString("N")</strong><br />
                        @* <strong class="product-price">-@item.Discount.ToString("N")</strong> *@

                        <div class="container">
                            <form asp-controller="Shop" asp-action="Cart" method="post">
                                <input type="hidden" name="itemId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger custom-btn position-absolute bottom-0 start-50 translate-middle-x">
                                    <img src="/images/cross.svg" class="img-fluid">
                                </button>
                            </form>
                        </div>
                    </a>
                </div>
                <!-- End Column 1 -->
            }
        </div>
    </div>
</div>

<script>
    document.getElementById('clearSearch').addEventListener('click', function () {
        // Clear the search input
        document.getElementById('searchString').value = '';

    });

</script>

